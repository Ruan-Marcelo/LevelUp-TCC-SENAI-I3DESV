                            <asp:Repeater ID="rCategoria" runat="server" OnItemDataBound="rCategoria_ItemDataBound">
                                <ItemTemplate>
                                    <div class='<%# (int)Eval("SubCategoriaCount") > 0 ? "nav-item dropdown" : "" %>'>
                                        <a href="Loja.aspx?cid=<%# Eval("CategoriaId") %>"
