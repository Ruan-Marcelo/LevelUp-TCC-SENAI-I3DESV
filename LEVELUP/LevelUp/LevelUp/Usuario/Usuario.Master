                                            <%# Eval("CategoriaNome") %>
                                            <i class='<%# (int)Eval("SubCategoriaCount") > 0 ? "fa fa-angle-down float-right mt-1" : "" %>'></i></a>
                                        <asp:HiddenField ID="hfCategoriaId" runat="server" Value='<%# Eval("CategoriaId") %> ' />
                                        <asp:Repeater ID="rSubcategoria" runat="server">
                                            <HeaderTemplate>
                                                <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                                            </HeaderTemplate>
                                            <ItemTemplate>
                                                <a href="Loja.aspx?sid=<%# Eval("SubCategoriaId") %>" class="dropdown-item">
                                                    <%# Eval("SubCategoriaNome") %> 
                                                </a>
                                            </ItemTemplate>
                                            <FooterTemplate>
                                                </div>
                                            </FooterTemplate>
                                        </asp:Repeater>
                                    </div>
                                </ItemTemplate>
                            </asp:Repeater>
                        </div>
                    </nav>
                </div>
                <div class="col-lg-9">
