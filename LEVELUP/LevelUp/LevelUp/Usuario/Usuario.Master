                                    <span class="text-muted mx-1">|</span>
                                    <a href="Login.aspx" class="nav-item nav-link px-2">Login</a>
                                </asp:Panel>


                                <asp:Panel ID="pnlLogado" runat="server" Visible="false" CssClass="d-flex align-items-center">
                                    <asp:Image ID="imgPerfil" runat="server" CssClass="rounded-circle border"
                                        Width="35px" Height="35px" Style="margin-right: 8px;" />
                                    <span class="nav-item nav-link text-dark font-weight-bold px-2">Olá,
                                        <asp:Label ID="lblNomeUsuario" runat="server" />
                                    </span>
                                    <asp:LinkButton ID="lblResgitrarOrPerfil" runat="server" CssClass="user_link" OnClick="lblResgitrarOrPerfil_Click" CausesValidation="false">
                                            <i class="fas fa-user"></i>
                                    </asp:LinkButton>
                                    <asp:LinkButton ID="btnLogout" runat="server" CssClass="nav-item nav-link px-2 text-danger"
                                        OnClick="btnLogout_Click">Sair</asp:LinkButton>
                                </asp:Panel>
                            </div>
                        </div>
                    </nav>

                    <asp:Panel ID="pnlSliderUC" runat="server"></asp:Panel>

                </div>
